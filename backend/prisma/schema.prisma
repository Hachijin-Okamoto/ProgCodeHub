generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Problem {
  id          Int          @id @default(autoincrement())
  title       String
  body        String
  level       Int

  samples     Sample[]
  submissions Submission[]
}

model Sample {
  id        Int    @id @default(autoincrement())
  problemId Int
  input     String
  output    String

  problem Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
}

model Submission {
  id        Int    @id @default(autoincrement())
  problemId Int
  body      String
  language  String
  result    Boolean

  problem Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
}
