{
  "name": "progcodehub",
  "version": "1.2.0",
  "description": "- プログラミングの教育現場で、問題とそれに対して提出されたコードを閲覧するアプリ - REST API / GraphQLの性能比較用アプリでもあります。",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "format:ts": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:js": "prettier --write \"src/**/*.js\"",
    "format:html": "prettier --write \"src/**/*.html\"",
    "format:css": "prettier --write \"src/**/*.css\"",
    "format:prisma": "prisma format",
    "format": "run-s format:*",
    "prisma:generate": "prisma generate",
    "prisma:init": "prisma migrate reset",
    "prisma:seed": "prisma db seed",
    "copy:public": "rm -rf dist/Frontend/public && cp -r src/Frontend/public dist/Frontend/public",
    "copy:graphql": "rm -rf dist/Backend/graphql/entity && cp -r src/Backend/graphql/entity dist/Backend/graphql/entity",
    "copy": "run-s copy:*",
    "transpile": "tsc",
    "build": "run-s lint format transpile copy",
    "dev": "run-s prisma:init prisma:seed start",
    "start": "node dist/Backend/index.js"
  },
  "repository": "https://github.com/Hachijin-Okamoto/ProgCodeHub.git",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.1.6",
    "@graphql-tools/schema": "^10.0.30",
    "@prisma/adapter-better-sqlite3": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "graphql": "^16.12.0",
    "graphql-http": "^1.22.4",
    "npm-run-all": "^4.1.5",
    "react-router-dom": "^7.12.0",
    "ruru": "^2.0.0-rc.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.7.4",
    "prisma": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
