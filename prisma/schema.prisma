generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Problem {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  submissions Submission[]
}

model Submission {
  id        Int      @id @default(autoincrement())
  problemId Int
  userName  String
  code      String
  createdAt DateTime @default(now())

  problem Problem @relation(fields: [problemId], references: [id])
}
